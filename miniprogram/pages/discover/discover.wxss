/* pages/discover/discover.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom) + 100rpx);
  box-sizing: border-box;
}

.header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 创建区域 */
.create-section {
  margin-bottom: 40rpx;
}

.create-card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.create-card.main-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.create-card.main-card .card-title,
.create-card.main-card .card-desc,
.create-card.main-card .card-arrow {
  color: #fff;
}

.card-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.card-content {
  flex: 1;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.card-desc {
  display: block;
  font-size: 24rpx;
  color: #888;
}

.card-arrow {
  font-size: 36rpx;
  color: #a18cd1;
}

/* 选择器区域 */
.selector-section {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.selector-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.selector-item:last-of-type {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.picker-value {
  font-size: 28rpx;
  color: #a18cd1;
  font-weight: 500;
}

.generate-btn {
  width: 100%;
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 24rpx;
}

.generate-btn::after {
  border: none;
}

/* 模版区域 */
.template-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-more {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.template-scroll {
  width: 100%;
}

.template-list {
  display: flex;
  gap: 20rpx;
  padding-right: 40rpx;
}

.template-card {
  flex-shrink: 0;
  width: 280rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.template-cover {
  width: 100%;
  height: 180rpx;
}

.template-info {
  padding: 16rpx;
}

.template-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.template-meta {
  display: block;
  font-size: 22rpx;
  color: #888;
  margin-bottom: 8rpx;
}

.template-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  font-size: 20rpx;
  color: #a18cd1;
  background: rgba(161, 140, 209, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 分类区域 */
.category-section {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 36rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.category-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
}


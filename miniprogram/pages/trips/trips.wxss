/* pages/trips/trips.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
  padding-bottom: calc(env(safe-area-inset-bottom) + 100rpx);
}

/* 状态筛选 */
.status-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  padding: 16rpx 24rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
  border-radius: 16rpx;
  transition: all 0.2s;
}

.tab.active {
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
}

.tab text:first-child {
  font-size: 26rpx;
  color: #666;
}

.tab.active text:first-child {
  color: #fff;
  font-weight: 600;
}

.tab .count {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.tab.active .count {
  color: rgba(255, 255, 255, 0.8);
}

/* 行程列表 */
.trip-list {
  padding: 24rpx;
}

.trip-card {
  position: relative;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.trip-card.ongoing {
  border: 3rpx solid #a18cd1;
  box-shadow: 0 8rpx 32rpx rgba(161, 140, 209, 0.3);
}

.trip-cover {
  width: 100%;
  height: 240rpx;
}

.status-badge {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  backdrop-filter: blur(10px);
}

.status-badge.planning {
  background: rgba(255, 193, 7, 0.9);
  color: #fff;
}

.status-badge.ongoing {
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
  color: #fff;
}

.status-badge.completed {
  background: rgba(76, 175, 80, 0.9);
  color: #fff;
}

.trip-info {
  padding: 24rpx;
}

.trip-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.trip-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #666;
}

.trip-date {
  font-size: 22rpx;
  color: #999;
}

.trip-actions {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  backdrop-filter: blur(10px);
}

.action-icon {
  font-size: 36rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 36rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
  text-align: center;
}

.empty-btn {
  background: #fff;
  color: #a18cd1;
  border: none;
  border-radius: 40rpx;
  padding: 24rpx 80rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.empty-btn::after {
  border: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 80rpx;
}

.loading-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}


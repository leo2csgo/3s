.container {
  padding: 40rpx;
  /* 清新极光渐变 - 更具旅行感 */
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 标题区优化 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 64rpx; /* 加大标题 */
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
  letter-spacing: 4rpx; /* 增加字间距 */
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  display: block;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
}

/* 选择区 */
/* 磨砂玻璃拟态卡片样式 */
.selector-section,
.card-display {
  background: rgba(255, 255, 255, 0.85); /* 半透明白 */
  backdrop-filter: blur(20px); /* 磨砂效果 */
  border-radius: 32rpx; /* 更大的圆角 */
  padding: 48rpx 40rpx;
  margin-bottom: 40rpx;
  /* 更柔和、弥散的阴影 */
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.08),
    inset 0 0 0 1px rgba(255, 255, 255, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.selector-item {
  margin-bottom: 40rpx;
}

.selector-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #444;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.picker {
  background: #fff;
  padding: 30rpx 32rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.picker::after {
  content: "▼";
  font-size: 20rpx;
  color: #ccc;
  margin-left: 10rpx;
}

/* 出行目的标签 */
.intent-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag {
  padding: 16rpx 36rpx;
  background: rgba(255, 255, 255, 0.6);
  border: 1px solid rgba(0, 0, 0, 0.05);
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.tag-active {
  background: linear-gradient(135deg, #8ec5fc 0%, #e0c3fc 100%);
  color: #fff;
  border-color: transparent;
  transform: scale(1.05) translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(142, 197, 252, 0.4);
}

/* 生成按钮 - 魔法按钮效果 */
.generate-btn {
  width: 100%;
  background: linear-gradient(90deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%);
  color: #fff;
  font-size: 38rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  padding: 36rpx;
  border-radius: 60rpx;
  border: none;
  box-shadow: 0 16rpx 40rpx rgba(255, 154, 158, 0.4);
  margin-bottom: 40rpx;
  transition: transform 0.2s;
  position: relative;
  overflow: hidden;
}

.generate-btn:active {
  transform: scale(0.96);
  box-shadow: 0 8rpx 20rpx rgba(255, 154, 158, 0.4);
}

/* 微光扫过动画 */
.generate-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.4),
    transparent
  );
  animation: shine 3s infinite;
}

@keyframes shine {
  0% {
    left: -100%;
  }
  20% {
    left: 100%;
  }
  100% {
    left: 100%;
  }
}

.generate-btn::after {
  border: none;
}

/* 卡片展示区 */
/* ==============================
   布局容器 - 确保屏幕居中
   ============================== */
.card-display-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 100vh;
}

/* ==============================
   沉浸式海报容器
   ============================== */
.card-display {
  width: 100%;
  max-width: 690rpx; /* 限制最大宽度，防止太宽 */
  position: relative;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 30rpx 60rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 120rpx; /* 给底部悬浮按钮留位置 */
  background: #fff;
}

/* 背景层 - 铺满底层 */
.poster-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.poster-bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 内容层 - 毛玻璃效果 */
.poster-content-wrapper {
  position: relative;
  z-index: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 60rpx 40rpx;

  /* 毛玻璃核心效果 */
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);

  /* 边框增强层次感 */
  border: 1px solid rgba(255, 255, 255, 0.3);
}

/* 海报头部 */
.poster-header {
  text-align: center;
  margin-bottom: 50rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx dashed rgba(161, 140, 209, 0.3);
}

.poster-title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.poster-subtitle {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 4rpx;
}

/* 行程列表 */
.itinerary-list {
  margin-bottom: 50rpx;
}

.day-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  margin-top: 50rpx;
}

.day-badge {
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(161, 140, 209, 0.3);
}

.day-date {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

/* 活动项 */
.activity-item {
  position: relative;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.activity-time-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.time-tag {
  font-size: 24rpx;
  color: #888;
  background: rgba(136, 136, 136, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

.activity-cost {
  font-size: 24rpx;
  color: #e74c3c;
  font-weight: 600;
}

.activity-main {
  margin-bottom: 12rpx;
}

.activity-name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.activity-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

/* 导航按钮 - 优化后 */
.location-btn {
  background: rgba(255, 255, 255, 0.8);
  padding: 6rpx 12rpx 6rpx 6rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  border: 1px solid rgba(64, 158, 255, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.1s;
}

.location-btn:active {
  transform: scale(0.95);
}

.nav-icon-bg {
  width: 40rpx;
  height: 40rpx;
  background: #007aff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
}

.loc-icon {
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}

.loc-text {
  font-size: 22rpx;
  color: #007aff;
  font-weight: 600;
}

/* 编辑输入框 */
.activity-desc-input {
  width: 100%;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  min-height: 60rpx;
  padding: 12rpx;
  background: rgba(245, 247, 250, 0.8);
  border-radius: 12rpx;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.activity-duration {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
}

/* ==============================
   通用卡片容器
   ============================== */
.section-box {
  background: rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #555;
}

.section-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* ==============================
   清单样式
   ============================== */
.checklist-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.checklist-item {
  width: 48%;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.5);
  padding: 16rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
  transition: all 0.2s;
}

.checklist-item.checked {
  background: rgba(161, 140, 209, 0.15);
}

.checklist-item.checked .check-text {
  color: #a18cd1;
  text-decoration: line-through;
  opacity: 0.8;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
  border: 2rpx solid #ddd;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  font-size: 22rpx;
  color: #fff;
  transition: all 0.2s;
}

.checklist-item.checked .checkbox {
  background: #a18cd1;
  border-color: #a18cd1;
}

.check-text {
  font-size: 26rpx;
  color: #666;
}

/* ==============================
   贴士样式
   ============================== */
.tips-section {
  background: #fffcf5;
  border-color: #f0e6d2;
}

.tips-content {
  font-size: 26rpx;
  color: #8a6d3b;
  line-height: 1.6;
  text-align: justify;
}

/* 海报底部 */
.poster-footer {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 2rpx dashed rgba(161, 140, 209, 0.3);
}

/* ==============================
   底部二维码区域样式
   ============================== */
.qr-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  padding: 24rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.qr-desc {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.qr-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.qr-sub {
  font-size: 22rpx;
  color: #666;
  letter-spacing: 2rpx;
}

.qr-container {
  background: #fff;
  padding: 8rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.qr-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.total-cost {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
  text-align: center;
  margin-top: 20rpx;
}

.poster-brand {
  font-size: 24rpx;
  color: #999;
  letter-spacing: 2rpx;
}

/* ==============================
   生成后的图片展示模式
   ============================== */
.result-image-wrapper {
  width: 100%;
  max-width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeIn 0.5s ease;
}

.final-poster-image {
  width: 100%;
  border-radius: 24rpx;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 30rpx;
}

/* 图片操作按钮 */
.image-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.re-edit-btn,
.save-btn {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  color: #a18cd1;
  padding: 20rpx 32rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  border: 1px solid rgba(161, 140, 209, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.re-edit-btn::after,
.save-btn::after {
  border: none;
}

.re-edit-btn:active,
.save-btn:active {
  background: #a18cd1;
  color: #fff;
  transform: scale(0.95);
}

/* 分享提示 */
.share-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx;
  background: rgba(245, 247, 250, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.share-tip text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 1.4;
}

.share-tip text:first-child {
  color: #a18cd1;
  font-weight: 600;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 悬浮按钮优化 */
.action-buttons-floating {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  z-index: 100;
}

.action-btn-float {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  color: #a18cd1;
  font-size: 24rpx;
  padding: 20rpx 24rpx;
  border-radius: 30rpx;
  border: 1px solid rgba(161, 140, 209, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  min-width: 140rpx;
  text-align: center;
}

.action-btn-float::after {
  border: none;
}

.action-btn-float:active {
  background: #a18cd1;
  color: #fff;
  transform: scale(0.95);
}

/* 视图切换按钮 */
.view-toggle {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
  background: rgba(230, 230, 250, 0.3);
  padding: 10rpx;
  border-radius: 60rpx;
  flex-wrap: wrap;
}

.toggle-btn {
  flex: 1;
  min-width: 180rpx;
  text-align: center;
  padding: 20rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.toggle-btn.active {
  background: #fff;
  color: #a18cd1;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.toggle-btn.theme-btn {
  background: rgba(255, 255, 255, 0.7);
  border: 2rpx solid rgba(161, 140, 209, 0.3);
  color: #a18cd1;
}

.toggle-btn.theme-btn:active {
  background: #a18cd1;
  color: #fff;
}

/* 文字卡片优化 */
.card-content {
  background: #fffcf5; /* 暖色调信纸背景 */
  border: 1px solid #f0e6d2;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  max-height: 800rpx;
  overflow-y: auto;
  box-shadow: inset 0 0 20rpx rgba(0, 0, 0, 0.02);
}

.card-text {
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica,
    sans-serif;
  font-size: 28rpx;
  line-height: 1.8;
  color: #444;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 操作按钮优化 */
.action-btn {
  flex: 1;
  min-width: 200rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #a18cd1;
  font-size: 28rpx;
  padding: 24rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(161, 140, 209, 0.2);
  transition: all 0.3s;
  backdrop-filter: blur(10px);
}

.action-btn:active {
  background: #a18cd1;
  color: #fff;
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(161, 140, 209, 0.3);
}

.action-btn::after {
  border: none;
}

/* 图片卡片 - 精美相框效果 */
.card-image-wrapper {
  position: relative;

  /* 磨砂玻璃背景效果 */
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(15px);

  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  min-height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;

  /* 精美阴影 - 悬浮感 */
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08),
    0 4rpx 16rpx rgba(161, 140, 209, 0.12),
    inset 0 0 0 1px rgba(255, 255, 255, 0.6);

  /* 边框 */
  border: 1px solid rgba(255, 255, 255, 0.3);
}

/* 相框内装饰边框 */
.card-image-wrapper::before {
  content: "";
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  border: 1px solid rgba(161, 140, 209, 0.15);
  border-radius: 16rpx;
  pointer-events: none;
}

.card-image {
  width: 100%;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.generating-tip {
  font-size: 28rpx;
  color: #a18cd1;
  text-align: center;
  font-weight: 500;
}

/* 隐藏的Canvas */
.hidden-canvas {
  position: fixed;
  left: -9999rpx;
  top: -9999rpx;
}

/* 全屏显示 */
.fullscreen-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.95);
  z-index: 9999;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  padding: 20rpx 0;
}

.fullscreen-image {
  width: 100%;
  display: block;
  margin: 0 auto;
}

.fullscreen-tip {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  right: 0;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  opacity: 0.8;
  z-index: 10000;
  pointer-events: none;
}

/* 主题选择器 - 磨砂玻璃升级 */
.theme-selector-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 9998;
  display: flex;
  align-items: flex-end;
  backdrop-filter: blur(10px);
}

.theme-selector {
  width: 100%;
  /* 磨砂玻璃效果 */
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx;
  animation: slideUp 0.3s ease-out;

  /* 边框和阴影 */
  border: 1px solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.1);
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.theme-selector-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 主题卡片 - 磨砂效果 */
.theme-list-new {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.theme-card {
  /* 磨砂玻璃卡片 */
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  overflow: hidden;
  transition: all 0.3s;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.theme-card.active {
  border-color: rgba(161, 140, 209, 0.6);
  background: rgba(161, 140, 209, 0.1);
  box-shadow: 0 8rpx 24rpx rgba(161, 140, 209, 0.2);
  transform: scale(1.02);
}

.theme-gradient {
  width: 100%;
  height: 120rpx;
  position: relative;
}

.theme-info {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* 磨砂背景 */
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(5px);
}

.theme-name-new {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.theme-check-new {
  font-size: 24rpx;
  color: #a18cd1;
  background: rgba(161, 140, 209, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.theme-close-btn {
  width: 100%;
  /* 磨砂按钮 */
  background: rgba(245, 247, 250, 0.8);
  backdrop-filter: blur(10px);
  color: #666;
  border: 1px solid rgba(255, 255, 255, 0.3);
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
}

.theme-close-btn::after {
  border: none;
}

/* 调试面板样式 */
.debug-panel {
  margin: 40rpx 0;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border-left: 8rpx solid #007aff;
}

.debug-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #007aff;
  margin-bottom: 20rpx;
}

.debug-item {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

/* ============================================
   悬浮操作栏 (FAB) 样式
   ============================================ */

.fab-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-top: 1px solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 1000;
}

.fab-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  background: rgba(245, 247, 250, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.6);
  min-width: 100rpx;
  transition: all 0.2s ease;
}

.fab-btn:active {
  transform: scale(0.95);
  background: rgba(230, 232, 235, 0.9);
}

.fab-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.fab-label {
  font-size: 22rpx;
  color: #666;
  white-space: nowrap;
}

/* 编辑模式按钮 */
.fab-edit {
  background: rgba(161, 140, 209, 0.15);
  border-color: rgba(161, 140, 209, 0.3);
}

.fab-edit.active {
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
  border-color: transparent;
}

.fab-edit.active .fab-label {
  color: #fff;
}

.fab-edit.active .fab-icon {
  color: #fff;
}

/* 添加文本按钮 */
.fab-text {
  background: rgba(255, 193, 7, 0.15);
  border-color: rgba(255, 193, 7, 0.3);
}

.fab-text .fab-icon {
  color: #ffc107;
}

/* 添加地点按钮 */
.fab-poi {
  background: rgba(76, 175, 80, 0.15);
  border-color: rgba(76, 175, 80, 0.3);
}

.fab-poi .fab-icon {
  color: #4caf50;
}

/* 换背景按钮 */
.fab-theme {
  background: rgba(156, 39, 176, 0.1);
  border-color: rgba(156, 39, 176, 0.2);
}

.fab-theme .fab-icon {
  color: #9c27b0;
}

/* 生成海报按钮 */
.fab-poster {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: transparent;
}

.fab-poster .fab-label {
  color: #fff;
}

.fab-poster .fab-icon {
  color: #fff;
}

/* 分隔线 */
.fab-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.1);
  margin: 0 8rpx;
}

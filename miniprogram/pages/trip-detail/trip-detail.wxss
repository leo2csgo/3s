/* pages/trip-detail/trip-detail.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
}

/* 自定义导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
}

.nav-content {
  display: flex;
  align-items: center;
  height: 44px;
  padding: 0 16rpx;
}

.nav-back {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nav-actions {
  width: 80rpx;
  display: flex;
  justify-content: flex-end;
}

.nav-icon {
  font-size: 40rpx;
  color: #333;
}

/* 头部卡片 */
.header-card {
  margin: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.trip-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 16rpx;
}

.trip-meta {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.meta-tag {
  font-size: 26rpx;
  color: #666;
  background: rgba(161, 140, 209, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* Block 滚动区域 */
.block-scroll {
  height: calc(100vh - 300rpx);
  padding: 0 24rpx;
}

.block-list {
  padding-bottom: 200rpx;
}

.block-wrapper {
  position: relative;
}

/* 插入点 */
.insert-point {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  margin: 8rpx 0;
  opacity: 0.5;
  transition: all 0.2s;
}

.insert-point:active {
  opacity: 1;
}

.insert-icon {
  width: 48rpx;
  height: 48rpx;
  line-height: 44rpx;
  text-align: center;
  background: rgba(161, 140, 209, 0.3);
  border-radius: 50%;
  color: #a18cd1;
  font-size: 32rpx;
}

/* 空状态 */
.empty-blocks {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.bottom-spacer {
  height: 200rpx;
}

/* 底部工具栏 */
.toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 24rpx;
  padding: 24rpx 40rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.toolbar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 40rpx;
  border-radius: 20rpx;
  background: rgba(245, 247, 250, 0.8);
  min-width: 140rpx;
}

.toolbar-btn.primary {
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
}

.toolbar-btn.primary .toolbar-icon,
.toolbar-btn.primary .toolbar-label {
  color: #fff;
}

.toolbar-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.toolbar-label {
  font-size: 24rpx;
  color: #666;
}

/* 添加抽屉 */
.add-drawer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.add-drawer.show {
  opacity: 1;
  visibility: visible;
}

.drawer-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform 0.3s;
}

.add-drawer.show .drawer-content {
  transform: translateY(0);
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.drawer-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.drawer-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.drawer-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.drawer-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  background: rgba(161, 140, 209, 0.08);
  border-radius: 20rpx;
}

.item-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.item-name {
  font-size: 26rpx;
  color: #666;
}
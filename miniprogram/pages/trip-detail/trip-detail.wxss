/* pages/trip-detail/trip-detail.wxss */
.container {
  min-height: 100vh;
  background: transparent;
}

/* 空状态 */
.empty-blocks {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* =============================
   Timeline Canvas (Immersive)
   ============================= */
.timeline-canvas {
  position: relative;
  padding: 40rpx 32rpx;
  padding-left: 0;
}

.timeline-guide-line {
  position: absolute;
  left: 60rpx;
  top: 40rpx;
  bottom: 120rpx;
  width: 2rpx;
  background: rgba(255, 255, 255, 0.5);
  z-index: 0;
}

.timeline-node {
  display: flex;
  position: relative;
  margin-bottom: 32rpx;
  z-index: 1;
  transition: transform 0.12s ease, box-shadow 0.12s ease;
}
.timeline-node.moving {
  transform: scale(0.98);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
}

.node-left {
  width: 120rpx;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  padding-top: 24rpx;
}

.node-body {
  flex: 1;
  min-width: 0;
}

.dot-poi {
  width: 24rpx;
  height: 24rpx;
  background: #fff;
  border: 6rpx solid #a18cd1;
  border-radius: 50%;
  box-shadow: 0 0 0 4rpx rgba(255, 255, 255, 0.5);
}

.dot-day {
  font-size: 32rpx;
  background: #fbc2eb;
  border-radius: 12rpx;
  padding: 4rpx;
}

.dot-trans {
  font-size: 24rpx;
  background: #fff;
  border-radius: 50%;
  padding: 8rpx;
  border: 1rpx solid #ddd;
}

.type-transport {
  margin: 10rpx 0;
}
.type-transport .node-body {
  transform: scale(0.96);
  transform-origin: left top;
}

.insert-zone {
  height: 20rpx;
  margin: -10rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition: all 0.2s;
  z-index: 10;
}
.insert-zone:active {
  height: 60rpx;
  opacity: 1;
}
.plus-btn {
  background: #a18cd1;
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 移动目标区 */
.move-target {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 0;
  margin: 8rpx 0;
  opacity: 0;
  overflow: hidden;
  transition: all 0.15s ease;
}
.move-target.show {
  height: 64rpx;
  opacity: 1;
}
.move-indicator {
  padding: 10rpx 18rpx;
  font-size: 24rpx;
  color: #6b7280;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx dashed #c7d2fe;
  border-radius: 16rpx;
  backdrop-filter: blur(12px);
}
.move-target.tail {
  margin-top: 16rpx;
  margin-bottom: 24rpx;
}

.append-zone {
  display: flex;
  justify-content: center;
  padding: 16rpx 0;
  color: #666;
}
.footer-spacer {
  height: 240rpx;
}

.item-name {
  font-size: 26rpx;
  color: #666;
}

/* ===== Hero Section ===== */
.hero-section {
  padding: 20rpx 40rpx;
}
.hero-content {
}
.hero-badges {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}
.badge {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 100rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}
.hero-title {
  font-size: 56rpx;
  font-weight: 800;
  color: #fff;
  display: block;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.hero-meta {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}
.dot {
  margin: 0 10rpx;
}

/* ===== Generic Glass Bar ===== */
.glass-bar {
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-top: 1rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
}

/* ===== Unified Bottom Toolbar ===== */
.bottom-toolbar {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  padding: 12rpx;
  border-radius: 100rpx;
  gap: 16rpx;
  z-index: 900;
}
.tool-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 40rpx;
  border-radius: 60rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.2s;
}
.tool-btn .icon {
  font-size: 28rpx;
}
.tool-btn.highlight {
  background: #333;
  color: #fff;
  font-weight: 600;
}
.tool-btn:active {
  transform: scale(0.95);
  opacity: 0.85;
}

/* ===== Hero Cover & Gradient ===== */
.hero-section {
  position: relative;
  min-height: 320rpx;
}
.hero-content {
  position: relative;
  z-index: 1;
}
.hero-bg {
  position: absolute;
  inset: 0;
  overflow: hidden;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}
.hero-cover {
  width: 100%;
  height: 100%;
  transform: scale(1.02);
}
.hero-gradient {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    180deg,
    rgba(0, 0, 0, 0.35) 0%,
    rgba(0, 0, 0, 0) 55%,
    rgba(0, 0, 0, 0.25) 100%
  );
}

/* ===== Route Overview ===== */
.route-overview {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.route-chip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.22);
  border: 1rpx solid rgba(255, 255, 255, 0.35);
  color: #fff;
  font-size: 22rpx;
}
.route-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

/* ===== Poster Canvas (hidden) ===== */
.poster-canvas {
  position: fixed;
  left: -9999px;
  width: 750rpx;
  height: 1200rpx;
}

/* === New Hero + Left Timeline + Bottom Bar (Aurora/Glass) === */
.hero {
  position: relative;
  height: 500rpx;
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
  overflow: hidden;
}
.hero-bg {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: saturate(1.05) contrast(1.05);
}
.hero-overlay {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0.15),
    rgba(0, 0, 0, 0.55)
  );
}
.top-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
}
.icon-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 36rpx;
  color: #fff;
}
.hero-info {
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  bottom: 24rpx;
  color: #fff;
}
.hero-title {
  font-size: 44rpx;
  font-weight: 800;
  text-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.25);
}
.badges {
  display: flex;
  gap: 12rpx;
  margin-top: 14rpx;
  flex-wrap: wrap;
}
.badge {
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #fff;
  border: 1rpx solid rgba(255, 255, 255, 0.35);
  background: rgba(255, 255, 255, 0.16);
}

.timeline-section {
  position: relative;
  margin-top: 16rpx;
  padding: 16rpx 24rpx 220rpx;
}
.timeline-line {
  position: absolute;
  top: 0;
  bottom: 160rpx;
  left: 56rpx;
  width: 2rpx;
  background: rgba(255, 255, 255, 0.45);
}
.blocks-list {
  display: block;
}
.block-row {
  display: flex;
  gap: 20rpx;
  padding: 12rpx 0;
}
.node-col {
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.node-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.7);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}
.node-dot.trans {
  background: #ffd54f;
}
.node-dot.poi {
  background: #80deea;
}
.node-day {
  min-width: 88rpx;
  height: 88rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.35);
  color: #fff;
}
.content-col {
  flex: 1;
}
.day-header {
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.day-label {
  font-weight: 700;
  font-size: 30rpx;
}
.day-date {
  font-size: 24rpx;
  opacity: 0.85;
}
.block-card {
  border-radius: 24rpx;
  padding: 16rpx;
  color: #fff;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.12);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.move-target {
  padding: 8rpx 0;
  opacity: 0;
  transform: translateY(-10rpx);
  transition: all 0.2s ease;
}
.move-target.show {
  opacity: 1;
  transform: none;
}
.move-indicator {
  text-align: center;
  padding: 12rpx 16rpx;
  border-radius: 16rpx;
  color: #fff;
  font-size: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.12);
}
.insert-zone {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 54rpx;
}
.plus-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 32rpx;
  color: #fff;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.12);
}
.append-zone {
  padding: 24rpx 0 16rpx;
  display: flex;
  justify-content: center;
}
.append-btn {
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  color: #fff;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.12);
}

.bottom-bar-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}
.bottom-bar {
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 12rpx;
}
.bottom-bar .tool-btn {
  flex: 1;
  height: 80rpx;
  margin: 0 6rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  color: #fff;
}
.bottom-bar .tool-btn.active {
  background: rgba(255, 255, 255, 0.85);
  color: #764ba2;
}
.bottom-bar .icon {
  font-size: 36rpx;
}
.divider {
  width: 2rpx;
  height: 44rpx;
  background: rgba(255, 255, 255, 0.35);
}

.add-drawer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 1200;
  background: rgba(0, 0, 0, 0.2);
  display: none;
}
.add-drawer.show {
  display: block;
}
.drawer-panel {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding: 28rpx;
  transform: translateY(100%);
  transition: transform 0.25s ease;
}
.add-drawer.show .drawer-panel {
  transform: translateY(0);
}
.drawer-header {
  font-weight: 700;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  text-align: center;
}
.drawer-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}
.drawer-item {
  padding: 24rpx;
  background: #f5f7fa;
  border-radius: 18rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
}

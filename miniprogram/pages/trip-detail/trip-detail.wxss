/* pages/trip-detail/trip-detail.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
}

/* 自定义导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20px);
  transition: background 0.2s ease;
}

.nav-bar.glass {
  background: rgba(255, 255, 255, 0.92);
}

.nav-content {
  display: flex;
  align-items: center;
  height: 44px;
  padding: 0 16rpx;
}

.nav-back {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nav-actions {
  width: 80rpx;
  display: flex;
  justify-content: flex-end;
}

.nav-icon {
  font-size: 40rpx;
  color: #333;
}

/* 头部卡片 */
.header-card {
  margin: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.trip-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 16rpx;
}

.trip-meta {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.meta-tag {
  font-size: 26rpx;
  color: #666;
  background: rgba(161, 140, 209, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* Block 滚动区域 */
.block-scroll {
  height: calc(100vh - 300rpx);
  padding: 0 24rpx;
}

.block-list {
  padding-bottom: 200rpx;
}

.block-wrapper {
  position: relative;
}

/* 插入点 */
.insert-point {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  margin: 8rpx 0;
  opacity: 0.5;
  transition: all 0.2s;
}

.insert-point:active {
  opacity: 1;
}

.insert-icon {
  width: 48rpx;
  height: 48rpx;
  line-height: 44rpx;
  text-align: center;
  background: rgba(161, 140, 209, 0.3);
  border-radius: 50%;
  color: #a18cd1;
  font-size: 32rpx;
}

/* 空状态 */
.empty-blocks {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.bottom-spacer {
  height: 200rpx;
}

/* 底部工具栏 */
.toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 24rpx;
  padding: 24rpx 40rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.toolbar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 40rpx;
  border-radius: 20rpx;
  background: rgba(245, 247, 250, 0.8);
  min-width: 140rpx;
}

.toolbar-btn.primary {
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
}

.toolbar-btn.primary .toolbar-icon,
.toolbar-btn.primary .toolbar-label {
  color: #fff;
}

.toolbar-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.toolbar-label {
  font-size: 24rpx;
  color: #666;
}

/* 添加抽屉 */
.add-drawer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.add-drawer.show {
  opacity: 1;
  visibility: visible;
}

.drawer-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform 0.3s;
}

.add-drawer.show .drawer-content {
  transform: translateY(0);
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.drawer-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.drawer-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.drawer-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.drawer-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  background: rgba(161, 140, 209, 0.08);
  border-radius: 20rpx;
}

.item-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

/* =============================
   Timeline Canvas (Immersive)
   ============================= */
.timeline-canvas {
  position: relative;
  padding: 40rpx 32rpx;
  padding-left: 0;
}

.timeline-guide-line {
  position: absolute;
  left: 60rpx;
  top: 40rpx;
  bottom: 120rpx;
  width: 2rpx;
  background: rgba(255, 255, 255, 0.5);
  z-index: 0;
}

.timeline-node {
  display: flex;
  position: relative;
  margin-bottom: 32rpx;
  z-index: 1;
  transition: transform 0.12s ease, box-shadow 0.12s ease;
}
.timeline-node.moving {
  transform: scale(0.98);
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.12);
}

.node-left {
  width: 120rpx;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  padding-top: 24rpx;
}

.node-body { flex: 1; min-width: 0; }

.dot-poi {
  width: 24rpx;
  height: 24rpx;
  background: #fff;
  border: 6rpx solid #a18cd1;
  border-radius: 50%;
  box-shadow: 0 0 0 4rpx rgba(255,255,255,0.5);
}

.dot-day {
  font-size: 32rpx;
  background: #fbc2eb;
  border-radius: 12rpx;
  padding: 4rpx;
}

.dot-trans {
  font-size: 24rpx;
  background: #fff;
  border-radius: 50%;
  padding: 8rpx;
  border: 1rpx solid #ddd;
}

.type-transport { margin: 10rpx 0; }
.type-transport .node-body { transform: scale(0.96); transform-origin: left top; }

.insert-zone {
  height: 20rpx;
  margin: -10rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition: all 0.2s;
  z-index: 10;
}
.insert-zone:active { height: 60rpx; opacity: 1; }
.plus-btn {
  background: #a18cd1;
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}

/* 移动目标区 */
.move-target {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 0;
  margin: 8rpx 0;
  opacity: 0;
  overflow: hidden;
  transition: all 0.15s ease;
}
.move-target.show { height: 64rpx; opacity: 1; }
.move-indicator {
  padding: 10rpx 18rpx;
  font-size: 24rpx;
  color: #6b7280;
  background: rgba(255,255,255,0.9);
  border: 2rpx dashed #c7d2fe;
  border-radius: 16rpx;
  backdrop-filter: blur(12px);
}
.move-target.tail { margin-top: 16rpx; margin-bottom: 24rpx; }

.append-zone { display: flex; justify-content: center; padding: 16rpx 0; color: #666; }
.footer-spacer { height: 200rpx; }


.item-name {
  font-size: 26rpx;
  color: #666;
}

/* ===== Hero Section ===== */
.hero-section { padding: 20rpx 40rpx; }
.hero-content { }
.hero-badges { display: flex; gap: 16rpx; margin-bottom: 16rpx; }
.badge { font-size: 22rpx; padding: 6rpx 16rpx; background: rgba(255,255,255,0.25);
  border-radius: 100rpx; border: 1rpx solid rgba(255,255,255,0.3);
  color: #fff; text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1); }
.hero-title { font-size: 56rpx; font-weight: 800; color: #fff; display: block;
  margin-bottom: 16rpx; text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1); }
.hero-meta { font-size: 26rpx; color: rgba(255,255,255,0.9); }
.dot { margin: 0 10rpx; }

/* ===== Generic Glass Bar ===== */
.glass-bar { background: rgba(255,255,255,0.75); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);
  border-top: 1rpx solid rgba(255,255,255,0.5); box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.05); }

/* ===== Unified Bottom Toolbar ===== */
.bottom-toolbar { position: fixed; bottom: 60rpx; left: 50%; transform: translateX(-50%);
  display: flex; padding: 12rpx; border-radius: 100rpx; gap: 16rpx; z-index: 900; }
.tool-btn { display: flex; align-items: center; gap: 8rpx; padding: 20rpx 40rpx; border-radius: 60rpx; font-size: 28rpx; color: #666; transition: all .2s; }
.tool-btn .icon { font-size: 28rpx; }
.tool-btn.highlight { background: #333; color: #fff; font-weight: 600; }
.tool-btn:active { transform: scale(0.95); opacity: .85; }


/* ===== Hero Cover & Gradient ===== */
.hero-section { position: relative; min-height: 320rpx; }
.hero-content { position: relative; z-index: 1; }
.hero-bg { position: absolute; inset: 0; overflow: hidden; border-bottom-left-radius: 0; border-bottom-right-radius: 0; }
.hero-cover { width: 100%; height: 100%; transform: scale(1.02); }
.hero-gradient { position: absolute; inset: 0; background: linear-gradient(180deg, rgba(0,0,0,0.35) 0%, rgba(0,0,0,0.00) 55%, rgba(0,0,0,0.25) 100%); }

/* ===== Route Overview ===== */
.route-overview { margin-top: 16rpx; display: flex; flex-wrap: wrap; gap: 12rpx; }
.route-chip { display: flex; align-items: center; gap: 8rpx; padding: 8rpx 14rpx; border-radius: 999rpx; background: rgba(255,255,255,0.22); border: 1rpx solid rgba(255,255,255,0.35); color: #fff; font-size: 22rpx; }
.route-dot { width: 12rpx; height: 12rpx; border-radius: 50%; }

/* ===== Poster Canvas (hidden) ===== */
.poster-canvas { position: fixed; left: -9999px; width: 750rpx; height: 1200rpx; }

/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom) + 100rpx);
  box-sizing: border-box;
}

/* 用户卡片 */
.user-card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.avatar-wrapper {
  margin-right: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(161, 140, 209, 0.3);
}

.user-info {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.user-stats {
  font-size: 26rpx;
  color: #888;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #a18cd1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #888;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.08);
  align-self: center;
}

/* 菜单区域 */
.menu-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
  margin-left: 8rpx;
}

.menu-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-value {
  font-size: 26rpx;
  color: #888;
  margin-right: 16rpx;
}

.menu-count {
  font-size: 24rpx;
  color: #fff;
  background: #a18cd1;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 分享按钮样式重置 */
.share-btn {
  background: transparent;
  line-height: inherit;
  text-align: left;
}

.share-btn::after {
  border: none;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx;
}

.version-info text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}


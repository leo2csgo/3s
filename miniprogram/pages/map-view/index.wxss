.map-page { width: 100vw; height: 100vh; position: relative; }
.map { width: 100%; height: 100%; }

/* Glass util */
.glass { background: rgba(255,255,255,.85); backdrop-filter: blur(12px); -webkit-backdrop-filter: blur(12px); box-shadow: 0 8rpx 24rpx rgba(0,0,0,.08); }

/* Day filter chips */
.day-filter { position: absolute; top: 24rpx; left: 24rpx; right: 24rpx; z-index: 10; padding: 12rpx; border-radius: 60rpx; display: flex; gap: 16rpx; }
.day-filter .chip { padding: 10rpx 22rpx; border-radius: 40rpx; background: rgba(0,0,0,0.04); color: #333; font-size: 24rpx; margin-right: 12rpx; display: inline-flex; align-items: center; }
.day-filter .chip.active { background: #333; color: #fff; }

/* Floating info card */
.floating-card { position: absolute; left: 24rpx; right: 24rpx; bottom: 36rpx; z-index: 10; border-radius: 24rpx; padding: 24rpx; }
.card-title { font-weight: 700; font-size: 30rpx; color: #222; }
.card-sub { margin-top: 6rpx; color: #666; font-size: 24rpx; }
.card-actions { margin-top: 16rpx; display: flex; gap: 16rpx; }
.card-btn { background: #333; color: #fff; border-radius: 999rpx; padding: 10rpx 20rpx; }
.card-btn.ghost { background: #f2f3f5; color: #333; }


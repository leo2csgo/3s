/* Day Divider Block 样式 - 复用原有日期标题样式 */

.day-divider {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 16rpx 0;
  margin-top: 16rpx;
}

/* Day 徽章 */
.day-badge {
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
  padding: 10rpx 24rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(161, 140, 209, 0.3);
}

.day-label {
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}

/* 日期 */
.day-date {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-right: 8rpx;
}

/* 主题 */
.day-theme {
  font-size: 26rpx;
  color: #888;
}

/* 分隔线 */
.divider-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, rgba(161, 140, 209, 0.4) 0%, rgba(161, 140, 209, 0) 100%);
  margin-left: 16rpx;
}


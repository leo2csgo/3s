/* Block Renderer 样式 */

.block-wrapper {
  position: relative;
  margin-bottom: 0;
}

/* Transport Block 样式 */
.transport-block {
  display: flex;
  align-items: center;
  padding: 0;
  background: transparent;
  border-radius: 0;
  border: none;
}

.transport-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.transport-info {
  display: flex;
  flex-direction: column;
}
.transport-route {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 4rpx;
}
.transport-main {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.transport-instruction {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.transport-duration {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 4rpx;
}

/* Image Block 样式 */
.image-block {
  border-radius: 16rpx;
  overflow: hidden;
  background: transparent;
}

.block-image {
  width: 100%;
  display: block;
}

.image-caption {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.8);
}

/* Unknown Block 样式 */
.unknown-block {
  padding: 24rpx;
  background: rgba(255, 200, 200, 0.3);
  border-radius: 12rpx;
  text-align: center;
}

.unknown-block text {
  font-size: 24rpx;
  color: #e74c3c;
}

/* Transport 编辑样式优化 */
.transport-card {
  position: relative; /* 为了定位删除按钮 */
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 12rpx 0;
}

.trans-main {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
}
.trans-route {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 输入框通用样式 */
.trans-input {
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #fff;
  min-height: 1.2em;
}
.trans-input.mode {
  width: 100rpx;
}
.trans-input.duration {
  width: 60rpx;
  text-align: center;
}

.duration-wrap {
  display: flex;
  align-items: center;
  gap: 4rpx;
}
.trans-unit {
  font-size: 22rpx;
  opacity: 0.6;
}

/* 迷你删除按钮 */
.delete-btn-mini {
  position: absolute;
  right: 0;
  top: 0;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: center;
}

/* Transport icon & picker */
.trans-ico {
  font-size: 28rpx;
  margin-right: 8rpx;
}
.trans-picker {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #fff;
  min-height: 1.2em;
  padding: 2rpx 0;
}

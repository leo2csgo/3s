/* Block Renderer 样式 */

.block-wrapper {
  margin-bottom: 0;
}

/* Transport Block 样式 */
.transport-block {
  display: flex;
  align-items: center;
  padding: 0;
  background: transparent;
  border-radius: 0;
  border: none;
}

.transport-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.transport-info {
  display: flex;
  flex-direction: column;
}
.transport-route {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 4rpx;
}
.transport-main {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.transport-instruction {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.transport-duration {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 4rpx;
}

/* Image Block 样式 */
.image-block {
  border-radius: 16rpx;
  overflow: hidden;
  background: transparent;
}

.block-image {
  width: 100%;
  display: block;
}

.image-caption {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.8);
}

/* Unknown Block 样式 */
.unknown-block {
  padding: 24rpx;
  background: rgba(255, 200, 200, 0.3);
  border-radius: 12rpx;
  text-align: center;
}

.unknown-block text {
  font-size: 24rpx;
  color: #e74c3c;
}

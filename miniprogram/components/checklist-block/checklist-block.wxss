.checklist-container {
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 10rpx 0;
}
.checklist-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.title {
  font-size: 26rpx;
  font-weight: bold;
  color: #555;
}
.actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
}
.tpl-btn,
.col-btn,
.add-btn {
  min-width: 40rpx;
  height: 40rpx;
  padding: 0 14rpx;
  background: #f5f7fa;
  color: #333;
  border-radius: 20rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;
}
.add-btn {
  background: #a18cd1;
  color: #fff;
}
.list-items {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.list-items .item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 12rpx;
  padding: 10rpx 12rpx;
}
.list-items.columns-1 .item {
  width: 100%;
}
.list-items.columns-2 .item {
  width: 48%;
}
.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  transition: all 0.2s;
}
.checkbox.checked {
  background: #a18cd1;
  border-color: #a18cd1;
}
.check-mark {
  color: #fff;
  font-size: 20rpx;
}
.item-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.item-input.done {
  color: #999;
  text-decoration: line-through;
}
.delete-icon {
  padding: 0 6rpx;
  color: #ccc;
  font-size: 32rpx;
}

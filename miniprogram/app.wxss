/* 全局样式 */
page {
  --aurora-1: #667eea;
  --aurora-2: #764ba2;
  --aurora-3: #f093fb;
  --aurora-4: #f5576c;
  --aurora-5: #ffa726;
  /* 改为静态渐变背景，降低 GPU/耗电开销 */
  background: linear-gradient(135deg, #111827, #1f2937, #4c1d95);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
    Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  color: #fff;
  box-sizing: border-box;
}

.scroll-locked {
  height: 100vh;
  overflow: hidden;
}

/* 覆盖小程序默认按钮样式 */
button {
  border: none;
  line-height: normal;
  padding: 0;
  margin: 0;
  background: none;
  font-size: inherit;
  color: inherit;
}

button::after {
  border: none;
}

/* === Aurora background animation (opt-in via .aurora-page) === */
@keyframes aurora {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* Apply this class on a page root container if you want animated aurora background */
.aurora-page {
  /* 页面内仍使用多色极光感渐变，但不再做大范围动画 */
  background: linear-gradient(135deg, #667eea, #764ba2, #f093fb, #f5576c);
  min-height: 100vh;
  color: #fff;
}

/* === Glassmorphism utilities (global) === */
.glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.glass-strong {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

/* === Small utilities === */
.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}
.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.text-shadow {
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}
.hide-scrollbar::-webkit-scrollbar {
  display: none;
}

/* Tap feedback utility */
.pressed {
  transform: scale(0.98);
  opacity: 0.95;
}
